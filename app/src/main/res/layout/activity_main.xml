<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/node" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/tbType"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="@dimen/mediumSize"
                android:textOn="Serial"
                android:textOff="Parallel"/>

            <TextView
                android:id="@+id/tvQuantite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@dimen/bigSize"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
            <Button
                android:id="@+id/btnQuatiteMoins"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textAlignment="center"
                android:gravity="center"

                android:textSize="32sp"/>
            <Button
                android:id="@+id/btnQuatitePlus"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="32sp"/>
</LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/serie" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNumero"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/bigSize"
                android:textAlignment="center"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnNumero"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Confirmer résistance"
                android:textSize="@dimen/smallSize"/>

            <EditText
                android:id="@+id/edtValeur"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Valeur de résistance"
                android:textSize="@dimen/bigSize"/>

            <Button
                android:id="@+id/btnValeur"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Valeur de résistance"
                android:textSize="@dimen/smallSize"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="@color/teal_200"
                >
                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tvR1"
                    android:textSize="@dimen/mediumSize"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tvR2"
                    android:textSize="@dimen/mediumSize"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tvR3"
                    android:textSize="@dimen/mediumSize"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tvR4"
                    android:textSize="@dimen/mediumSize"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:orientation="horizontal">

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />


                <ListView
                    android:id="@+id/lvR1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    >


                </ListView>
                <Space
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />


                <ListView
                    android:id="@+id/lvR2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">

                </ListView>
                <Space
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />


                <ListView
                    android:id="@+id/lvR3"
                    android:layout_width="70dp"
                    android:layout_height="match_parent">

                </ListView>
                <Space
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />

                <ListView
                    android:id="@+id/lvR4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">

                </ListView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/light_grey">
                <TextView
                    android:id="@+id/tvListValues"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:outlineAmbientShadowColor="@color/black"
                    android:outlineSpotShadowColor="@color/black"
                    android:padding="@dimen/bigSize"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tvTotal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textSize="14pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Équivalence"/>
    <Button
        android:id="@+id/btnCalculRt"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculer l'équivalence"
        android:layout_margin="12dp"
        android:layout_marginEnd="12dp"/>
</LinearLayout>